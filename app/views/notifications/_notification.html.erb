<%= tag.div notification_path(notification),
            class: [
              # base card
              "group flex items-center gap-4 p-4 rounded-lg transition",
              "border",               
              "hover:bg-gray-100 dark:hover:bg-gray-700",
              "focus:outline-none focus:ring-2 focus:ring-blue-400",

              # read vs unread
              notification.seen? ?
                "bg-white dark:bg-gray-800 border-gray-200 dark:border-gray-700" :
                "bg-gray-100 dark:bg-gray-900 border-gray-500"
            ].join(" ") do
%>
  <svg xmlns="http://www.w3.org/2000/svg"
       viewBox="0 0 24 24"
       class="w-6 h-6 flex-none transition-colors"
       aria-hidden="true"
       stroke="currentColor"
       fill="none">
    <circle cx="12" cy="12" r="9"
          class="<%= notification.seen? ? "stroke-green-500" : "stroke-gray-300 group-hover:stroke-green-500" %>"
          stroke-width="2" />
    <path d="M9 12l2 2 4-4"
          class="<%= notification.seen? ? "stroke-green-500" : "stroke-gray-300 group-hover:stroke-green-500" %>"
          stroke-linecap="round" stroke-linejoin="round" stroke-width="2"/>
  </svg>

  <div class="flex-1 space-y-1">
    <p class="text-sm text-gray-800 dark:text-gray-100">
      <%= notification.message %>
    </p>
    <p class="text-xs text-gray-500 dark:text-gray-400">
      <%= time_ago_in_words(notification.created_at) %> ago
    </p>
  </div>
<% end %>
