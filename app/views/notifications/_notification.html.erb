<%= link_to notification.url, 
            class: [
              # base card - Twitter-like styling with DaisyUI colors
              "group block p-4 transition-colors duration-200",
              "border-b border-base-content/20",
              "hover:bg-base-200",
              "focus:outline-none focus:bg-base-200",

              # read vs unread
              notification.seen? ?
                "bg-base-100" :
                "bg-primary/10"
            ].join(" ") do
%>
  <div class="flex items-start space-x-3">
    <!-- Icon -->
    <div class="flex-shrink-0 mt-0.5">
      <%= inline_svg_tag "svg/bell.svg", 
                        class: [
                          "w-5 h-5 transition-colors",
                          notification.seen? ? 
                            "text-base-content/60 group-hover:text-success" : 
                            "text-success"
                        ].join(" ") %>
    </div>

    <!-- Content -->
    <div class="flex-1 min-w-0">
      <p class="text-sm text-base-content leading-5">
        <%= notification.message %>
      </p>
      <p class="text-xs text-base-content/60 mt-1">
        <%= time_ago_in_words(notification.created_at) %> ago
      </p>
    </div>
  </div>
<% end %>
